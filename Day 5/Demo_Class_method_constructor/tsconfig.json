// tsconfig.json will help us in compiling the typescript files present in the folder and its subfolders
{
  "compilerOptions": {
    "target": "es6",    //specifying the target                      
    "module": "es6",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dis",//output directory for compiled js files
    "noEmitOnError": false
  },
  "include": ["./**/*.ts"]  // this will include all typescript files in the current folder and its subfolders
}
